<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.helopc_manage.app.Coupon_Activity">
    <TextView
        android:id="@+id/delc"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delivery Charges"
        android:padding="10dp"
        android:textSize="16sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/metro_m"/>
    <RelativeLayout
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/deliverycharges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/metro_m"
            android:hint="Enter Delivery charge"
            android:inputType="number"
            android:padding="10dp" />

        <Button
            android:id="@+id/addcharges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/metro_m"
            android:padding="10dp"
            android:text="Add Charges"
            android:textSize="16sp" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tnoc"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tax and Other Charges"
        android:padding="10dp"
        android:textSize="16sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/metro_m"/>
    <RelativeLayout
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/tc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/metro_m"
            android:hint="Enter charges in %"
            android:inputType="number"
            android:padding="10dp" />

        <Button
            android:layout_centerVertical="true"
            android:id="@+id/addtaxcharges"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Add Charges"
            android:textSize="16sp"
            android:fontFamily="@font/metro_m"/>
    </RelativeLayout>

<EditText
    android:id="@+id/promocode"
    android:padding="10dp"
    android:layout_marginTop="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fontFamily="@font/metro_m"
    android:hint="Enter Promo code"/>

    <EditText
        android:id="@+id/amount"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Price Cut in %"
        android:fontFamily="@font/metro_m"
        android:inputType="number"/>
    <Button
        android:id="@+id/create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Create Promo Code"
        android:textSize="18sp"
        android:fontFamily="@font/metro_m"/>
    <androidx.recyclerview.widget.RecyclerView
        android:paddingBottom="1dp"
        android:background="#dadada"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerView"/>
</LinearLayout>