<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.helopc_manage.app.MainActivity">
    <RelativeLayout
        android:id="@+id/orders"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="4dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/edittext"
        android:backgroundTint="#FF6200EE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textv"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Orders"
            android:layout_margin="10dp"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15sp"
            android:fontFamily="sans-serif-black"
            android:textAllCaps="true"
            />
        <ImageView
            android:visibility="invisible"
            android:id="@+id/reddot"
            android:layout_toRightOf="@id/textv"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/reddot4"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/orders2bd"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="4dp"
        android:background="@drawable/edittext"
        android:backgroundTint="#FF6200EE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textv2bd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="Orders to be deliver"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textSize="15sp" />
        <ImageView
            android:visibility="invisible"
            android:id="@+id/greendot"
            android:layout_toRightOf="@id/textv2bd"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/greendot2"/>
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addcategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="ADD Category"
        android:fontFamily="@font/metro_m"
        android:layout_margin="20dp"
        android:padding="20dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addproduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="ADD PRODUCT"
        android:fontFamily="@font/metro_m"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="20dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/list1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="List 1"
        android:fontFamily="@font/metro_m"
        android:layout_margin="20dp"
        android:padding="20dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/list2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="List 2"
        android:fontFamily="@font/metro_m"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="20dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/coupon"
        android:layout_margin="20dp"
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/metro_m"
        android:text="Charges And Coupon Code"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cancel"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/metro_m"
        android:text="Cancelled Orders"/>
</LinearLayout>